---
import Button from './Button.astro';

const slides = [
  {
    image: "https://images.unsplash.com/photo-1505664194779-8beaceb93744?q=80&w=2070&auto=format&fit=crop",
    title: "Formando Líderes con Excelencia",
    subtitle: "Licenciaturas, Maestrías y Doctorados con validez oficial. Tu futuro comienza aquí.",
    cta: "Ver Oferta Académica",
    link: "/oferta-academica"
  },
  {
    image: "https://images.unsplash.com/photo-1523240795612-9a054b0db644?q=80&w=2070&auto=format&fit=crop",
    title: "Educación Flexible y Moderna",
    subtitle: "Estudia a tu ritmo con nuestros modelos presenciales y en línea.",
    cta: "Conoce Más",
    link: "/nosotros"
  },
  {
    image: "https://images.unsplash.com/photo-1427504494785-3a9ca7044f45?q=80&w=2070&auto=format&fit=crop",
    title: "Alcanza tus Metas Profesionales",
    subtitle: "Únete a una comunidad de egresados exitosos en el sector público y privado.",
    cta: "Inscríbete Hoy",
    link: "/admisiones"
  }
];
---

<div class="relative min-h-screen w-full overflow-hidden bg-gray-900" id="hero-slider">
  <!-- Slides -->
  {slides.map((slide, index) => (
    <div class={`absolute inset-0 transition-opacity duration-1000 ease-in-out ${index === 0 ? 'opacity-100 z-10' : 'opacity-0 z-0'} slide-item`} data-index={index}>
      <!-- Background Image with Overlay -->
      <div class="absolute inset-0">
        <img src={slide.image} alt={slide.title} class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-r from-primary/90 to-primary/40"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-20 container mx-auto px-6 h-full flex items-center">
        <div class="max-w-3xl text-white animate-fade-in-up">
          <h1 class="text-5xl md:text-7xl font-semi-bold mb-6 font-serif leading-tight">
            {slide.title}
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-200 font-light">
            {slide.subtitle}
          </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <Button href={slide.link} variant="secondary" size="lg" class="w-full sm:w-auto transform hover:scale-105 shadow-lg">
                {slide.cta}
              </Button>
              <Button href="/contacto" variant="outline" size="lg" class="w-full sm:w-auto border-white text-white hover:bg-white hover:text-primary hover:border-white">
                Contáctanos
              </Button>
            </div>
        </div>
      </div>
    </div>
  ))}

  <!-- Navigation Dots -->
  <div class="absolute bottom-8 left-0 right-0 z-30 flex justify-center gap-3">
    {slides.map((_, index) => (
      <button 
        class={`w-3 h-3 rounded-full transition-all duration-300 ${index === 0 ? 'bg-secondary w-8' : 'bg-white/50 hover:bg-white'}`}
        data-slide={index}
        aria-label={`Ir a diapositiva ${index + 1}`}
      ></button>
    ))}
  </div>

  <!-- Arrows -->
  <button id="prev-slide" class="absolute left-4 top-1/2 transform -translate-y-1/2 z-30 bg-white/10 hover:bg-white/20 text-white p-3 rounded-full backdrop-blur-sm transition-colors">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
  </button>
  <button id="next-slide" class="absolute right-4 top-1/2 transform -translate-y-1/2 z-30 bg-white/10 hover:bg-white/20 text-white p-3 rounded-full backdrop-blur-sm transition-colors">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </button>
</div>

<style>
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  const slider = document.getElementById('hero-slider');
  const slides = slider?.querySelectorAll('.slide-item');
  const dots = slider?.querySelectorAll('[data-slide]');
  const prevBtn = document.getElementById('prev-slide');
  const nextBtn = document.getElementById('next-slide');
  let currentSlide = 0;
  let interval: any;

  function showSlide(index: number) {
    if (!slides || !dots) return;
    
    // Handle wrapping
    if (index >= slides.length) index = 0;
    if (index < 0) index = slides.length - 1;

    currentSlide = index;

    // Update slides
    slides.forEach((slide, i) => {
      if (i === currentSlide) {
        slide.classList.remove('opacity-0', 'z-0');
        slide.classList.add('opacity-100', 'z-10');
      } else {
        slide.classList.remove('opacity-100', 'z-10');
        slide.classList.add('opacity-0', 'z-0');
      }
    });

    // Update dots
    dots.forEach((dot, i) => {
      if (i === currentSlide) {
        dot.classList.remove('bg-white/50');
        dot.classList.add('bg-secondary', 'w-8');
      } else {
        dot.classList.remove('bg-secondary', 'w-8');
        dot.classList.add('bg-white/50');
      }
    });
  }

  function nextSlide() {
    showSlide(currentSlide + 1);
  }

  function prevSlide() {
    showSlide(currentSlide - 1);
  }

  function startAutoPlay() {
    interval = window.setInterval(nextSlide, 5000);
  }

  function stopAutoPlay() {
    clearInterval(interval);
  }

  // Event Listeners
  prevBtn?.addEventListener('click', () => {
    prevSlide();
    stopAutoPlay();
    startAutoPlay();
  });

  nextBtn?.addEventListener('click', () => {
    nextSlide();
    stopAutoPlay();
    startAutoPlay();
  });

  dots?.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      showSlide(index);
      stopAutoPlay();
      startAutoPlay();
    });
  });

  // Start
  startAutoPlay();
</script>
