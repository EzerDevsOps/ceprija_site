---
import Button from "./Button.astro";

interface Props {
    programTitle?: string;
}

const { programTitle = "Curso/Taller" } = Astro.props;
---

<div
    class="bg-white rounded-2xl shadow-lg p-8 sticky top-24 border-t-4 border-secondary"
>
    <h3 class="text-2xl font-bold text-primary mb-2 font-serif">Inscripción</h3>
    <p class="text-gray-600 mb-6 text-sm">
        Reserva tu lugar para: <span class="font-bold text-primary"
            >{programTitle}</span
        >
    </p>

    <form id="registration-form" class="space-y-4">
        <input type="hidden" name="program" value={programTitle} />
        <input type="hidden" name="type" value="registration" />

        <div>
            <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Nombre completo</label
            >
            <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
                placeholder="Tu nombre completo"
            />
        </div>

        <div>
            <label
                for="phone"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Teléfono / WhatsApp</label
            >
            <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
                placeholder="55 1234 5678"
            />
        </div>

        <div>
            <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Correo electrónico</label
            >
            <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all"
                placeholder="tu@email.com"
            />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
                >Modalidad de asistencia</label
            >
            <div class="flex gap-4">
                <label
                    class="flex items-center gap-2 cursor-pointer border p-3 rounded-lg w-full hover:bg-gray-50 transition-colors has-[:checked]:border-primary has-[:checked]:bg-blue-50"
                >
                    <input
                        type="radio"
                        name="modality"
                        value="Presencial"
                        class="text-primary focus:ring-primary"
                        checked
                    />
                    <span class="text-sm font-medium text-gray-700"
                        >Presencial</span
                    >
                </label>
                <label
                    class="flex items-center gap-2 cursor-pointer border p-3 rounded-lg w-full hover:bg-gray-50 transition-colors has-[:checked]:border-primary has-[:checked]:bg-blue-50"
                >
                    <input
                        type="radio"
                        name="modality"
                        value="En línea"
                        class="text-primary focus:ring-primary"
                    />
                    <span class="text-sm font-medium text-gray-700"
                        >En línea</span
                    >
                </label>
            </div>
        </div>

        <div class="flex items-start gap-2 pt-2">
            <div class="flex items-center h-5">
                <input
                    id="privacy"
                    name="privacy"
                    type="checkbox"
                    required
                    class="focus:ring-primary h-4 w-4 text-primary border-gray-300 rounded cursor-pointer"
                />
            </div>
            <div class="text-sm">
                <label
                    for="privacy"
                    class="font-medium text-gray-700 cursor-pointer"
                >
                    He leído y acepto el aviso de privacidad
                </label>
                <p class="text-gray-500 text-xs mt-1">
                    <a
                        href="/aviso-de-privacidad"
                        target="_blank"
                        class="text-secondary hover:text-primary underline decoration-dotted"
                    >
                        Leer avisos de privacidad
                    </a>
                </p>
            </div>
        </div>

        <div id="form-status" class="hidden mb-4 p-3 rounded-lg text-sm"></div>

        <Button
            type="submit"
            id="submit-btn"
            variant="primary"
            class="w-full flex justify-center items-center gap-2 mt-4"
        >
            <span>Inscribirme Ahora</span>
            <svg
                class="animate-spin h-5 w-5 text-white hidden"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                id="loading-spinner"
            >
                <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"></circle>
                <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                ></path>
            </svg>
        </Button>
    </form>
</div>

<script>
    const form = document.getElementById(
        "registration-form",
    ) as HTMLFormElement;
    const statusDiv = document.getElementById("form-status");
    const submitBtn = document.getElementById(
        "submit-btn",
    ) as HTMLButtonElement;
    const spinner = document.getElementById("loading-spinner");
    const btnText = submitBtn?.querySelector("span");

    if (form) {
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            // Reset status
            if (statusDiv) {
                statusDiv.classList.add("hidden");
                statusDiv.className = "hidden mb-4 p-3 rounded-lg text-sm";
            }

            // Loading state
            if (submitBtn && spinner && btnText) {
                submitBtn.disabled = true;
                spinner.classList.remove("hidden");
                btnText.textContent = "Procesando...";
            }

            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            try {
                const response = await fetch("/api/register", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(data),
                });

                const result = await response.json();

                if (response.ok) {
                    // Success
                    if (statusDiv) {
                        statusDiv.textContent =
                            "¡Inscripción recibida! Te hemos enviado un correo con los detalles de pago y confirmación.";
                        statusDiv.classList.remove("hidden");
                        statusDiv.classList.add(
                            "bg-green-100",
                            "text-green-800",
                            "border",
                            "border-green-200",
                        );
                    }
                    form.reset();
                } else {
                    // Error from server
                    throw new Error(
                        result.message || "Error al enviar el formulario",
                    );
                }
            } catch (error) {
                // Network or other error
                if (statusDiv) {
                    statusDiv.textContent =
                        "Hubo un error. Por favor contáctanos por WhatsApp para completar tu inscripción.";
                    statusDiv.classList.remove("hidden");
                    statusDiv.classList.add(
                        "bg-red-100",
                        "text-red-800",
                        "border",
                        "border-red-200",
                    );
                }
                console.error("Error submitting form:", error);
            } finally {
                // Reset button state
                if (submitBtn && spinner && btnText) {
                    submitBtn.disabled = false;
                    spinner.classList.add("hidden");
                    btnText.textContent = "Inscribirme Ahora";
                }
            }
        });
    }
</script>
