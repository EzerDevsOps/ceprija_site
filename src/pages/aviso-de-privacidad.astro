---
import Layout from "../layouts/Layout.astro";
import { privacyData } from "../data/privacy.js";
---

<Layout pageId="privacy">
    <main class="pt-20 pb-20 bg-gray-50">
        <div class="container mx-auto px-6 max-w-4xl">
            {
                privacyData.map((notice, index) => (
                    <div
                        class={`bg-white p-8 md:p-12 rounded-2xl shadow-sm space-y-6 text-gray-700 leading-relaxed ${index !== 0 ? "mt-12" : ""}`}
                    >
                        <h1 class="text-4xl font-bold font-serif text-primary mb-8 text-center text-balance">
                            {notice.title}
                        </h1>

                        {notice.sections?.map((section) => (
                            <>
                                {section.heading && (
                                    <h2 class="text-2xl font-bold text-primary pt-4 font-serif">
                                        {section.heading}
                                    </h2>
                                )}
                                <div class="space-y-4">
                                    {section.content?.map(
                                        (paragraph: string) => {
                                            const isBullet = paragraph
                                                .trim()
                                                .startsWith("•");
                                            const isSubBullet = paragraph
                                                .trim()
                                                .startsWith("-");

                                            if (isBullet) {
                                                return (
                                                    <div class="flex gap-3 pl-4">
                                                        <span class="text-primary font-bold">
                                                            •
                                                        </span>
                                                        <p>
                                                            {paragraph
                                                                .replace(
                                                                    "•",
                                                                    "",
                                                                )
                                                                .trim()}
                                                        </p>
                                                    </div>
                                                );
                                            }

                                            if (isSubBullet) {
                                                return (
                                                    <div class="flex gap-3 pl-12 text-gray-600">
                                                        <span class="font-bold">
                                                            -
                                                        </span>
                                                        <p>
                                                            {paragraph
                                                                .replace(
                                                                    "-",
                                                                    "",
                                                                )
                                                                .trim()}
                                                        </p>
                                                    </div>
                                                );
                                            }

                                            return <p>{paragraph}</p>;
                                        },
                                    )}
                                </div>
                            </>
                        ))}

                        <p class="text-sm text-gray-500 pt-8 border-t mt-8">
                            Última actualización: {notice.lastUpdate}
                        </p>
                    </div>
                ))
            }
        </div>
    </main>
</Layout>
