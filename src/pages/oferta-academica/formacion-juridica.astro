---
import Layout from '../../layouts/Layout.astro';
import { programs } from '../../data/programs-juridica.js';
import Accreditations from '../../components/Accreditations.astro';
import Button from "../../components/Button.astro";
---

<Layout pageId="juridica">
  <main class="bg-gray-50 min-h-screen py-12">
    <div class="container mx-auto px-6">
      
      <!-- Header Section -->
      <div class="text-center mb-16">
        <span class="text-secondary font-bold tracking-wider uppercase text-sm">Excelencia Académica</span>
        <h1 class="text-5xl font-bold text-primary mt-2 mb-6 font-serif">Formación Jurídica</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Programas diseñados para el mundo real, combinando teoría rigurosa con práctica profesional.
        </p>
      </div>

      <!-- Accreditations Section -->
      <div class="mb-16">
        <Accreditations />
      </div>

      <!-- Grid Layout -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {programs.map((program) => (
          <article class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 flex flex-col h-full">
            <!-- Card Image Area -->
            <div class={`h-48 ${program.image} relative overflow-hidden`}>
              <div class="absolute inset-0 bg-black opacity-10 group-hover:opacity-0 transition-opacity"></div>
              <div class="absolute top-4 left-4">
                <span class="bg-white/90 backdrop-blur-sm text-primary text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">
                  {program.level}
                </span>
              </div>
            </div>
            
            <!-- Card Content -->
            <div class="p-8 flex flex-col flex-grow">
              <h3 class="text-2xl font-bold text-primary mb-3 group-hover:text-secondary transition-colors font-serif">
                <a href={`/oferta-academica/${program.id}`}>
                  {program.title}
                </a>
              </h3>
              <p class="text-gray-600 mb-4 flex-grow leading-relaxed">
                {program.description}
              </p>
              
              <div class="space-y-2 mb-6 text-sm text-gray-500">
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{program.duration}</span>
                </div>
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <span>{program.modality}</span>
                </div>
              </div>
              
              <div class="pt-6 border-t border-gray-100 flex items-center justify-between">
                <a href={`/oferta-academica/${program.id}`} class="text-primary font-bold hover:text-secondary transition-colors flex items-center gap-2">
                  Ver Plan de Estudios
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- CTA Section -->
      <div class="mt-20 text-center">
        <p class="text-gray-600 mb-6">¿No encuentras lo que buscas? Contáctanos para asesoría personalizada.</p>
        <Button
            href="/contacto"
            id="submit-btn"
            variant="primary"
            class="inline-block bg-primary text-white font-bold py-3 px-8 hover:bg-blue-900 transition-colors shadow-lg hover:shadow-xl"
        >
          Hablar con un Asesor
        </Button>
      </div>

    </div>
  </main>
</Layout>
