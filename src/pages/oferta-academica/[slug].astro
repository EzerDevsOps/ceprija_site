---
import Layout from "../../layouts/Layout.astro";
import { programs } from "../../data/programs.js";
import ContactForm from "../../components/ContactForm.astro";

export async function getStaticPaths() {
    return programs.map((program) => ({
        params: { slug: program.id },
        props: { program },
    }));
}

const { program } = Astro.props;
---

<Layout title={`${program.title} | CEPRIJA`}>
    <main class="bg-gray-50 min-h-screen">
        <!-- Hero Section -->
        <section class={`${program.image} text-white py-20`}>
            <div class="container mx-auto px-6">
                <div class="max-w-4xl">
                    <span
                        class="bg-white/20 backdrop-blur-sm text-white text-sm font-bold px-4 py-2 rounded-full uppercase tracking-wide inline-block mb-4"
                    >
                        {program.level}
                    </span>
                    <h1 class="text-5xl font-bold mb-6 font-serif">
                        {program.title}
                    </h1>
                    <p class="text-xl text-gray-100 mb-8">
                        {program.description}
                    </p>

                    <div class="flex flex-wrap gap-6 text-sm">
                        <div class="flex items-center gap-2">
                            <span>RVOE: </span>
                            <span class="italic font-bold">{program.rvoe}</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                            <span>Duraci√≥n: {program.duration}</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                            <span>Modalidad: {program.modality}</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Content Section -->
        <section class="py-16">
            <div class="container mx-auto px-6">
                <div class="grid lg:grid-cols-3 gap-12">
                    <!-- Main Content -->
                    <div class="lg:col-span-2 space-y-12">
                        <!-- Plan de Estudios -->
                        <div class="bg-white rounded-2xl shadow-sm p-8">
                            <h2
                                class="text-3xl font-bold text-primary mb-6 font-serif flex items-center gap-3"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-8 w-8 text-secondary"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                                    ></path>
                                </svg>
                                Plan de Estudios
                            </h2>
                            <div class="space-y-8">
                                {
                                    program.curriculum.map((semester) => (
                                        <div>
                                            <h3 class="text-xl font-bold text-primary mb-4 border-b border-gray-200 pb-2 font-serif">
                                                {semester.period}
                                            </h3>
                                            <div class="grid md:grid-cols-2 gap-4">
                                                {semester.subjects.map(
                                                    (subject, subIndex) => (
                                                        <div class="flex items-start gap-3 p-4 bg-gray-50 rounded-lg hover:bg-blue-50 transition-colors">
                                                            <span class="flex-shrink-0 w-6 h-6 bg-secondary text-primary rounded-full flex items-center justify-center text-xs font-bold">
                                                                {subIndex + 1}
                                                            </span>
                                                            <span class="text-gray-700 font-medium">
                                                                {subject}
                                                            </span>
                                                        </div>
                                                    ),
                                                )}
                                            </div>
                                        </div>
                                    ))
                                }
                            </div>
                        </div>
                        <!-- Perfil del Egresado -->
                        <div class="bg-white rounded-2xl shadow-sm p-8">
                            <h2
                                class="text-3xl font-bold text-primary mb-6 font-serif flex items-center gap-3"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-8 w-8 text-secondary"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                    ></path>
                                </svg>
                                Perfil del Egresado
                            </h2>
                            <p class="text-gray-700 leading-relaxed text-lg">
                                {program.profile}
                            </p>
                        </div>

                        <!-- Campo Laboral -->
                        <div class="bg-white rounded-2xl shadow-sm p-8">
                            <h2
                                class="text-3xl font-bold text-primary mb-6 font-serif flex items-center gap-3"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-8 w-8 text-secondary"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                                Campo Laboral
                            </h2>
                            <p class="text-gray-700 leading-relaxed text-lg">
                                {program.fieldOfWork}
                            </p>
                        </div>
                    </div>

                    <!-- Sidebar -->
                    <div class="lg:col-span-1">
                        <ContactForm programTitle={program.title} />
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
