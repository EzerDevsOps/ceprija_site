---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout pageId="contact">
  <main class="container mx-auto px-6 py-12">
    <div class="max-w-5xl mx-auto">
      <h1 class="text-4xl font-bold text-primary mb-12 font-serif text-center">
        Contáctanos
      </h1>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold text-gray-800 mb-6 font-serif">
            Estamos para servirte
          </h2>
          <p class="text-gray-600 mb-8">
            Si tienes dudas sobre nuestra oferta académica, procesos de
            inscripción o becas, no dudes en escribirnos.
          </p>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="bg-blue-50 p-3 rounded-lg text-primary">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 font-serif">Ubicación</h3>
                <p class="text-gray-600">
                  Lope de Vega #273, Colonia Americana 44130, Guadalajara,
                  Jalisco
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="bg-blue-50 p-3 rounded-lg text-primary">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 font-serif">Teléfono</h3>
                <p class="text-gray-600">33 4711 1307</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="bg-blue-50 p-3 rounded-lg text-primary">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 font-serif">Email</h3>
                <p class="text-gray-600">contacto@ceprija.edu.mx</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="h-full">
          <ContactForm programTitle="Contacto General" />
        </div>
      </div>
    </div>
  </main>
</Layout>
